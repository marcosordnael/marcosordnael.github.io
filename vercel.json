{
    "version": 2,
    "builds": [
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/sendEmail",
            "dest": "/api/sendEmail.js",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ]
}